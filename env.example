# Configurações da Aplicação
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHAR_SECRET_KEY
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5002

# Configurações do Banco de Dados
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost:5433/revisoes_juridicas_db
DB_HOST=localhost
DB_PORT=5433
DB_NAME=revisoes_juridicas_db
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD

# Chave compartilhada para descriptografia de tokens (integração com sistemas tokenizados)
CONNECT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHAR_SECRET_KEY

# URL do Connect para API
CONNECT_URL=http://localhost:5001

# Configurações de Email
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=YOUR_EMAIL_USERNAME
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD

# Configurações para URLs externas
SERVER_NAME=localhost:5002
APPLICATION_ROOT=/
PREFERRED_URL_SCHEME=http

